{
    "name":"contao-bootstrap/carousel",
    "description":"Bootstrap carousel for Contao CMS",
    "keywords":["bootstrap", "carousel", "contao"],
    "type":"contao-module",
    "license":"LGPL-3.0+",
    "authors":[
        {
            "name":"David Molineus",
            "email":"mail@netzmacht.de",
            "homepage":"http://www.netzmacht.de",
            "role":"Project leader"
        }
    ],
    "support":{
        "email":"mail@netzmacht.de",
        "issues":"https://github.com/contao-bootstrap/carousel/issues",
        "wiki":"http://contao-bootstrap.netzmacht.de",
        "source":"https://github.com/contao-bootstrap/carousel"
    },
    "require":{
        "php":">=5.3.4",
        "contao-community-alliance/composer-plugin": "~2.0",
        "contao/core":">=3.2,<3.6-dev",
        "contao-bootstrap/core": "~1.0",
        "netzmacht/html": "~1.1",
        "contao-community-alliance/meta-palettes":"~1.4"
    },
    "require-dev": {
        "netzmacht/contao-build-tools": "~1.1"
    },
    "conflict": {
        "netzmacht/contao-bootstrap": "*"
    },
    "autoload": {
        "psr-0": { "Netzmacht\\Bootstrap\\Carousel": "src/" }
    },
    "extra":{
        "contao": {
            "sources":{
                "module": "system/modules/bootstrap-carousel"
            },
            "transifex": {
                "project": "contao-bootstrap",
                "prefix": "carousel-",
                "languages_cto": "module/languages",
                "languages_tx": ".tx"
            }
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
